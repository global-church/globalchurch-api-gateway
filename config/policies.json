{
  "policies": [
    {
      "name": "require-api-key",
      "policyType": "api-key-inbound",
      "handler": {
        "export": "ApiKeyInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "allowUnauthenticatedRequests": false,
          "cacheTtlSeconds": 60,
          "bucketName": "zprj-xcoscry0fvgghmxpthytslnc-production"
        }
      }
    },
    {
      "name": "ratelimit-per-partner",
      "policyType": "rate-limit-inbound",
      "handler": {
        "export": "RateLimitInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "rateLimitBy": "function",
          "identifier": {
            "module": "$import(./modules/dynamic-rate-limit)",
            "export": "getLimitFromMetadata"
          },
          "requestsAllowed": 200,
          "timeWindowMinutes": 1,
          "throwOnFailure": true,
          "mode": "async"
        }
      }
    },
    {
      "name": "inject-partner-id",
      "policyType": "set-headers-inbound",
      "handler": {
        "export": "SetHeadersInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "headers": [
            { "name": "x-partner-subject", "value": "${context.consumer?.subject}" }
          ]
        }
      }
    },
    {
      "name": "inject-supabase-jwt",
      "policyType": "set-headers-inbound",
      "handler": {
        "export": "SetHeadersInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "headers": [
            { "name": "Authorization", "value": "Bearer $env(SUPABASE_ANON_JWT)" },
            { "name": "apikey", "value": "$env(SUPABASE_SECRET_KEY)" }
          ]
        }
      }
    },
    {
      "name": "remove-incoming-authorization-header",
      "policyType": "remove-headers-inbound",
      "handler": {
        "export": "RemoveHeadersInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "headers": [
            "Authorization"
          ]
        }
      }
    },
    {
      "name": "log-incoming-headers-mcp",
      "policyType": "log-request-response-inbound",
      "handler": {
        "export": "LogRequestResponseInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "log": {
            "body": false,
            "headers": true
          }
        }
      }
    },
    {
      "name": "mcp-query-param-to-header-inbound",
      "policyType": "query-param-to-header-inbound",
      "handler": {
        "export": "QueryParamToHeaderInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "queryParam": "apiKey",
          "headerName": "Authorization",
          "headerValue": "Bearer {value}"
        }
      }
    }
  ],
  "corsPolicies": [
    {
      "name": "custom-cors",
      "allowedOrigins": "$env(ALLOWED_ORIGINS)",
      "allowedHeaders": "origin, authorization, content-type, accept, x-api-key, x-zuplo-partner-id",
      "allowedMethods": ["GET", "POST", "OPTIONS"],
      "exposeHeaders": "x-ratelimit-remaining",
      "maxAge": 86400,
      "allowCredentials": false
    }
  ]
}
